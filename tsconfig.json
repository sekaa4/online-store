{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext", //временно поменял es6;
    "typeRoots": [
      "node_modules/@types",
      "src/typings.d.ts"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node", //доступ модуль
    "resolveJsonModule": true, // доступ модуль
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "module.d.ts"
  ],
  "ts-node": { //ts-node, установка npm i -g ts-node, запуск ts-node fileName.ts / в package.json добавлена строка "type": "module".
    "esm": true
  }
}
